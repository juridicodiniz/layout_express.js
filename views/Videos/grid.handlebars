<h1 class="text-center my-3">{{pageTitle}}</h1>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Dados do Banco de Dados</h3>
    </div>

    <div class="card-body"> 

<table id="tabela-dados" class='table table-striped table-bordered'>
    <thead>
        <tr>
            <th>Código do video</th>
            <th>Autor</th>
            <th>Título</th>
            <th>Assunto</th>
            <th>Descrição</th>
            <th>link para visualização</th>           
        </tr>
    </thead>    
</table>
    </div>

</div>

<script>
    $(document).ready(function() {


    $('#tabela-dados').DataTable({
            "ajax": {
                "url": "/dados",
                "dataSrc": ""
            },
            "paging": true, "lengthChange": true, "searching": true, "pageLength": 5,
            "lengthMenu": [5, 10, 20, 50],               
            'scrollX': true,               
            "language": { "url": "//cdn.datatables.net/plug-ins/1.11.1/i18n/pt_br.json" },
            "ordering": true, "info": true, "autoWidth": false, "responsive": true, "order": [[0, "desc"]],
            dom: 'Blfrtip',
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print'] ,
            "columns": [
                { "data": "id_video" },
                { "data": "autor" },
                { "data": "titulo" },
                { "data": "assunto" },
                { "data": "descricao" },
                { "data": "link" }
            ]
        });


    });
</script>

